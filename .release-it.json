{
  "github": {
    "release": true,
    "draft": true,
    "releaseName": "${version}",
    "assets": ["src/schema.graphql"],
    "autoGenerate": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/bumper": {
      "out": [
        {
          "file": "pyproject.toml",
          "path": "tool.poetry.version"
        }
      ]
    }
  },
  "hooks": {
    "before:init": "echo Before initialization",
    "after:git:release": "echo After git push, before github release",
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  }
}
