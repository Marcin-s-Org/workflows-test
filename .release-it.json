{
  "github": {
    "release": true,
    "draft": true,
    "releaseName": "${version}",
    "assets": ["src/schema.graphql"],
    "autoGenerate": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/bumper": {
      "out": [
        {
          "file": "pyproject.toml",
          "path": "tool.poetry.version"
        }
      ]
    }
  }
}
