{
  "github": {
    "release": true,
    "draft": true,
    "releaseName": "${version}",
    "assets": ["src/schema.graphql"],
    "autoGenerate": true,
    "push": false
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/bumper": {
      "out": [
        {
          "file": "pyproject.toml",
          "path": "tool.poetry.version"
        }
      ]
    }
  },
  "hooks": {
    "after:bump": [
      "echo Will create branch: release-${version}",
      "git checkout -B release-${version} --track"
    ],
    "after:release": [
      "git push origin release-${version}"
    ]
  }
}



